<%= form_for(@message) do |f| %>

  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label for="message_name" class="control-label">名前:</label>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Enter Your Name...' %>
 　</div>

  <div class="form-group">
    <label for="message_age" class="control-label">年齢:</label>
    <%= f.text_field :age, class: 'form-control', placeholder: 'Enter Your Age...' %>
　</div>

  <div class="form-group">
    <label for="message_body" class="control-label">内容:</label>
    <%= f.text_area :body, class: 'form-control', placeholder: 'Enter Your Comments...' %>
　</div>

  <div class="form-group">
    <%= f.submit class: "btn btn-lg btn-primary" %>
　</div>

<% end %>